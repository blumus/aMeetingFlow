{
  "name": "AWS SAM & Terraform Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },


  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "amazonwebservices.aws-toolkit-vscode",
        "HashiCorp.terraform",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker"
      ]
    }
  },

  "runArgs": [
    "--env-file",
    ".env"
  ]
}